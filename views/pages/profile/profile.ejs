<%- include('../base/base-head'); -%>
    <%- include('../../components/navbar'); -%>
        <div class="d-noneee p-3 p-md-5">
            <div class="row">
                <div class="col-12 col-lg-3 px-0">
                    <ul style="z-index: -1;" class="nav custom-nav shadow-lg rounded flex-lg-column">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/profile">Compte</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile/info">Informations Personnelles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/myads">Mes Annonces</a>
                        </li>
                    </ul>
                </div>
                <div class="col-12 col-lg-9 p-3 shadow-lg rounded">
                    <!-- Compte template -->
                    <div class="d-flex">
                        <img style="max-height: 120px" class="rounded w-auto obj-fit-cover"
                            src="https://lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg" />
                        <div class="ms-3 p-3">
                            <h3>@SidAhmed
                                <button class="btn ps-1 pt-0" data-bs-toggle="modal"
                                    data-bs-target="#changeUsernameModal">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                                        aria-hidden="true" role="img" class="iconify iconify--ic" width="24" height="24"
                                        preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24">
                                        <path
                                            d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM21.41 6.34l-3.75-3.75l-2.53 2.54l3.75 3.75l2.53-2.54z"
                                            fill="currentColor"></path>
                                    </svg>
                                </button>
                            </h3>
                            <h6>sid@gmail.com
                                <button class="btn ps-1 pt-0" data-bs-toggle="modal" data-bs-target="#changeEmailModal">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                                        aria-hidden="true" role="img" class="iconify iconify--ic" width="18" height="18"
                                        preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24">
                                        <path
                                            d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM21.41 6.34l-3.75-3.75l-2.53 2.54l3.75 3.75l2.53-2.54z"
                                            fill="currentColor"></path>
                                    </svg>
                                </button>
                            </h6>
                            <div class="modal fade" id="changeUsernameModal" tabindex="-1"
                                aria-labelledby="changeUsernameModal" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="usernameModalLabel">Changer le nom d'utilisateur
                                            </h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form class="row g-3">
                                                <input placeholder="Entrez votre nouveau nom d'utilisateur" type="text"
                                                    class="form-control" id="usernameInput">
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Fermer</button>
                                            <button type="button" class="btn btn-primary">Mettre a jour</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal fade" id="changeEmailModal" tabindex="-1"
                                aria-labelledby="changeEmailModal" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="emailModalLabel">Changer l'email</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form class="row g-3">
                                                <input placeholder="Entrez votre nouvel email" type="email"
                                                    class="form-control" id="emailInput">
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Fermer</button>
                                            <button type="button" class="btn btn-primary">Mettre a jour</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <form class="row mt-3 g-3">
                        <h5>Changer votre mot de passe</h5>
                        <div class="">
                            <label for="currentPasswordInput" class="form-label">Mot de passe actuel</label>
                            <input placeholder="Entrez votre mot de passe" type="password" class="form-control"
                                id="currentPasswordInput">
                            <span class="d-inline-block alert alert-danger py-1 fs-7 fw-bold my-0 mt-1" role="alert">
                                Mot de passe errone
                            </span>
                        </div>
                        <div class="">
                            <label for="passwordInput" class="form-label">Nouveau mot de passe</label>
                            <input placeholder="Entrez votre mot de passe" type="password" class="form-control"
                                id="passwordInput">
                            <span class="d-inline-block alert alert-danger py-1 fs-7 fw-bold my-0 mt-1" role="alert">
                                Mot de passe trop court
                            </span>
                            <span class="d-inline-block alert alert-danger py-1 fs-7 fw-bold my-0 mt-1" role="alert">
                                Mot de passe doit contenir un caractere special
                            </span>
                        </div>
                        <div class="">
                            <label for="confirmPasswordInput" class="form-label">Confirmer mot de passe</label>
                            <input placeholder="Confirmez votre mot de passe" type="password" class="form-control"
                                id="confirmPasswordInput">
                            <span class="d-inline-block alert alert-danger py-1 fs-7 fw-bold my-0 mt-1" role="alert">
                                Mot de passe non conforme
                            </span>
                        </div>
                        <button type="submit" class="btn btn-primary">Mettre a jour</button>
                    </form>
                </div>
            </div>
        </div>
        <%- include('../../components/footer'); -%>
